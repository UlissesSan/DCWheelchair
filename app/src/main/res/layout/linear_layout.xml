<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
              android:weightSum="1"
              android:background="#ffffff">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

        <Button
            android:id="@+id/directions"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@drawable/directions"
            android:layout_row="0"
            android:layout_column="1"/>

        <Button
            android:id="@+id/gears"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@drawable/gears"
            android:layout_row="0"
            android:layout_column="0"/>

        <Button
            android:id="@+id/health"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@drawable/health"
            android:layout_row="0"
            android:layout_column="2"/>

        <Button
            android:id="@+id/entertainment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@drawable/entertainment"
            android:layout_row="0"
            android:layout_column="3"/>

        <Button
            android:id="@+id/bluetooth"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@drawable/bluetooth"
            android:layout_row="0"
            android:layout_column="4"/>

    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

        <Button
            android:id="@+id/upleft"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:background="@drawable/upleft"
            android:layout_row="0"
            android:layout_column="0"/>

        <Button
            android:id="@+id/forward"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:background="@drawable/up"
            android:stretchMode="none"
            android:layout_row="0"
            android:layout_column="1"
            />

        <Button
            android:id="@+id/upright"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:background="@drawable/upright"
            android:layout_row="0"
            android:layout_column="2"/>

        <Button
            android:id="@+id/left"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:background="@drawable/left"
            android:layout_row="1"
            android:layout_column="0"
            />

        <Button
            android:id="@+id/emergency"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:layout_gravity="right"
            android:background="@drawable/stop"
            android:layout_row="1"
            android:layout_column="1"
            />

        <Button
            android:id="@+id/right"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:background="@drawable/right"
            android:layout_row="1"
            android:layout_column="2"
            android:clickable="false"
            />

        <Button
            android:id="@+id/downleft"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:background="@drawable/downleft"
            android:layout_row="2"
            android:layout_column="0"/>

        <Button
            android:id="@+id/back"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:background="@drawable/down"
            android:layout_row="2"
            android:layout_column="1"
            />

        <Button
            android:id="@+id/downright"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:background="@drawable/downright"
            android:layout_row="2"
            android:layout_column="2"/>

    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

        <Button
            android:id="@+id/voicecommand"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:background="@drawable/voicecommand"
            android:layout_row="0"
            android:layout_column="0"/>

        <Button
            android:id="@+id/glove"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:background="@drawable/glove"
            android:layout_row="0"
            android:layout_column="1"/>

        <Button
            android:id="@+id/joystick"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:background="@drawable/joystick"
            android:layout_row="0"
            android:layout_column="2"/>

    </GridLayout>

</LinearLayout>